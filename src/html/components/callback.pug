section.callback
  .callback__img
    img(src="./img/callback-img.png")
  form(action="#" id="callback" name="callback" class="callback__form")
    h2.callback__title We will help you become better
    label(for="name" class="callback__label")
      input(id="name" name="name" placeholder="NAME" class="callback__input")
    label(for="phone" class="callback__label")
      input(id="phone" name="phone" placeholder="NUMBER" class="callback__input")
    button(type="submit" class="callback__action")
      span IM READY!